import '../List/List.recipes'
import 'Products.recipe'
import 'Recommend.recipe'

recipe Products
  // &displayProducts
  copy #shoplist as shoplist
  create #selected as selected
  SelectableItems
    consume root
      provide annotation as annotationSlot
      provide action as actionSlot
    list = shoplist
    selected = selected
  ItemMultiplexer
    list = shoplist
    hostedParticle = ProductItem
  // &addFromWishlist
  map #claire as person
  map #wishlist as wishlist
  Recommend
    population = wishlist
    known = shoplist
    recommendations = choices
  Chooser
    consume action as actionSlot
      provide annotation as choiceSlot
    person = person
    choices = wishlist
    resultList = shoplist
  ChoicesMultiplexer
    consume choice as choiceSlot
    list = shoplist
    choices = wishlist
    hostedParticle = AlsoOn

