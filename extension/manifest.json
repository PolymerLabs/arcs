{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "sessions",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "page": "event-page.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page-extractor.js", "load-browser-state.js", "content-script.js"]
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' http://localhost:8080/ https://www.gstatic.com/ https://*.firebaseio.com/ 'sha256-9MoalItHiOZbWS3wzc0WQNjNbdE2zDUz5+TGXyHnRzk=' 'sha256-xIedREMP42DNPlmq2yLtPJZmjr9gc1G4l5A+r1cOlmQ='; object-src 'self'"
}
