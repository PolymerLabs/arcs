{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "storage",

    "sessions",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["globals.js", "page-extractor.js", "content-script.js"],
      "all_frames": true
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'sha256-rdk56h4D+jfInKWMNE+DL5C923/KiX9j3/l0Cdvgj0c='; object-src 'self'"
}
