{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "sessions",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page-extractor.js", "load-browser-state.js", "content-script.js"]
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'sha256-4ZLoKbmiXpB4ulKjFozRAdzMwGKJbChWtw+qbw0I4uA=' 'sha256-aR62htQLYBzfCRnnuMNJ12S1RL55uokilEI6xMZMsWI='; object-src 'self'"
}
