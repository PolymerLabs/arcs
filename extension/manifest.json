{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "sessions",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "page": "event-page.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page-extractor.js", "load-browser-state.js", "content-script.js"]
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://polymerlabs.github.io/ https://www.gstatic.com/ https://*.firebaseio.com/ 'sha256-rdk56h4D+jfInKWMNE+DL5C923/KiX9j3/l0Cdvgj0c=' 'sha256-UhKb6ALfS/wBC46s4Gf/MkECcgTkd8muXg/DEdOKuwY=' 'sha256-4aZh2LlnvT0OTXLQucnX+y1UCeqWacVPi3HhCe5zb8w='; object-src 'self'"
}
