{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "sessions",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'sha256-glDwaK54liKYWLvGPqqBcPawzUYWfyDqixsK0aJo+V0='; object-src 'self'"
}
