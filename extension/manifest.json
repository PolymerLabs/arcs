{
  "manifest_version": 2,
  "name": "arcs",
  "version": "0",
  "permissions": [
    "sessions",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page-extractor.js", "load-browser-state.js", "content-script.js"]
    }
  ],
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' http://localhost:8080/ 'sha256-9MoalItHiOZbWS3wzc0WQNjNbdE2zDUz5+TGXyHnRzk=' 'sha256-3wfjvQq3xmR22GurO1RW5aXbUGhx26Eq/ezph2P8i4I='; object-src 'self'"
}
