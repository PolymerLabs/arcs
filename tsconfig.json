{
  "extends": "./config/tsconfig.base.json",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    // temporary turned on to deal with https://github.com/microsoft/TypeScript/issues/31717
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "exclude": [
    "build/**/*",
    "server/**/*"
  ]
}
