{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "esModuleInterop": true,

    "outDir": "runtime/ts-build",

    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "Node",

    "allowJs": false,
    "sourceMap": true,
    "target": "ES2017",
    "lib": ["es2017", "dom"] 
  },
  "include": [
    "runtime/ts/**/*",
  ],
}
