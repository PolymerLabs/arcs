{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "runtime/ts-build",
    "allowJs": false,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017", "dom"]
  },
  "include": [
    "runtime/ts/**/*",
  ],
}
