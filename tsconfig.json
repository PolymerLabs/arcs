{
  "extends": "./config/tsconfig.base.json",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noErrorTruncation": true
  },
  "exclude": [
    "src/tools/language-server/**/*",
    "src/tools/db-dump/**/*",
    "src/tools/vscode-language-client/**/*"
  ]
}
