{
  "extends": "./config/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "outDir": "build",
    // "declaration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "plugins": [
      {
        "name": "@bazel/tsetse",
        "disabledRules": ["must-use-promises"],
      },
    ],
  },
  "exclude": [
    "build/**/*",
    "server/**/*"
  ],
}
