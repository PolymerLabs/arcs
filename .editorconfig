root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.kt]
continuation_indent_size = 2
insert_file_newline = true
max_line_length = 100
disabled_rules=import-ordering

