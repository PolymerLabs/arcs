import 'AvatarPicker.manifest'
import 'FriendsPicker.manifest'
import 'FavoriteFoodPicker.manifest'
import '../Places/AddressForm.manifest'

recipe BasicUserProfile
  create #address as address
  create #avatar as avatar
  create #friends as friends
  use #user as person
  use #identities as people
  map #BOXED_avatar as avatars
  AvatarPicker
    avatar = avatar
    person <- person
  FriendsPicker
    person <- person
    friends = friends
    avatars <- avatars
    people <- people
  AddressForm
    address = address

recipe FavoriteFood
  use #user as person
  create #favorite as food
  FavoriteFoodPicker
    food = food
    person <- person
