{
  "name": "arcs",
  "version": "0.0.0",
  "private": true,
  "config": {
    "port": "8786",
    "host": "localhost"
  },
  "browser": "dist/webmain.js",
  "module": "dist/webmain.js",
  "main": "dist/index.es.js",
  "scripts": {
    "prepare": "cross-env tools/sigh check && cd devtools && npm install",
    "test-with-start": "run-p --print-name --race start test",
    "test": "run-s --print-name --continue-on-error test-no-web test-wdio-shells",
    "test-no-web": "run-s --print-name --continue-on-error test-sigh test-mocha-words test-extension",
    "test-sigh": "cross-env tools/sigh",
    "test-extension": "mocha-chrome extension/test/index.test.html",
    "test-mocha-words": "mocha-chrome artifacts/Words/test/index.test.html",
    "start": "cross-env http-server --silent -a localhost -p 8786",
    "X-test-wdio-shells": "cross-env wdio -b http://localhost:8786/ shells/test/wdio.conf.js",
    "test-wdio-shells": "wdio -b http://localhost:8786/ shells/test/wdio.conf.js",
    "build:rollup": "rollup -c --sourcemap",
    "build:typedoc": "typedoc --mode file --target ES2017  --downLevelIteration -out dist/apidocs",
    "server": "npm install && ./tools/sigh && npm run build:rollup && npm --prefix server install --no-package-lock && npm --prefix server install --package-lock-only && npm --prefix server run test",
    "server:start": "npm --prefix server start",
    "test-shells": "run-p --print-name --race start s-test-shells",
    "s-test-shells": "run-s --print-name --continue-on-error test-wdio-shells"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "chokidar": "^2.0.4",
    "chromedriver": "^2.43.1",
    "clang-format": "^1.2.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-google": "^0.11.0",
    "grammkit": "0.6.2",
    "http-server": "^0.11.1",
    "mersenne-twister": "^1.1.0",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "mocha-chrome": "^1.1.0",
    "node-webcrypto-ossl": "^1.0.37",
    "npm-run-all": "^4.1.3",
    "pegjs": "^0.10.0",
    "prettier": "^1.14.3",
    "request": "^2.88.0",
    "rollup": "^0.67.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-ignore": "^1.0.4",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "wdio-chromedriver-service": "^0.1.3",
    "wdio-errorshot-reporter": "^0.2.1",
    "wdio-mocha-framework": "^0.6.4",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.14.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@types/pouchdb-core": "^7.0.0",
    "@types/node": "^10.12.9",
    "assert": "^1.4.1",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "esm": "^3.0.84",
    "firebase": "^5.5.8",
    "idb": "^2.1.3",
    "jsrsasign": "^8.0.12",
    "jsrsasign-util": "^1.0.0",
    "node-fetch": "^2.3.0",
    "pouchdb": "^7.0.0",
    "pouchdb-adapter-memory": "^7.0.0",
    "source-map-support": "^0.5.9",
    "sourcemapped-stacktrace": "^1.1.9",
    "typescript": "^3.1.6",
    "ws": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PolymerLabs/arcs.git"
  },
  "author": "The Polymer Project Authors",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/PolymerLabs/arcs",
  "bugs": {
    "url": "https://github.com/PolymerLabs/arcs/issues"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.4.0"
  },
  "greenkeeper": {
    "ignore": [
      "ws"
    ]
  }
}
