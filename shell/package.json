{
  "name": "shell",
  "version": "0.0.0",
  "private": true,
  "config": {
    "port": "8080",
    "host": "localhost"
  },
  "scripts": {
    "test": "run-p --print-name --race start test-after-build",
    "start": "cross-env http-server -a ${npm_package_config_host} -p ${npm_package_config_port}",
    "build": "../tools/sigh webpack",
    "test-test": "run-s --print-name --continue-on-error test-mocha test-mocha-words test-wdio",
    "test-after-build": "run-s --print-name build test-test",
    "test-mocha": "mocha-chrome test/index.test.html",
    "test-mocha-words": "mocha-chrome artifacts/Words/index.test.html",
    "test-wdio": "cross-env wdio -b http://${npm_package_config_host}:${npm_package_config_port}/ test/wdio.conf.js"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chromedriver": "^2.35.0",
    "cross-env": "^5.1.3",
    "http-server": "^0.10.0",
    "mocha-chrome": "^1.0.2",
    "npm-run-all": "^4.1.2",
    "wdio-chromedriver-service": "^0.1.2",
    "wdio-mocha-framework": "^0.5.11",
    "wdio-spec-reporter": "^0.1.3",
    "webdriverio": "^4.10.1",
    "webpack": "^2.6.1",
    "yargs": "^10.1.1"
  }
}
