meta
  namespace: arcs.showcase.imports.recipes

import '../particles/inventory.arcs'
import '../recipes/imports.arcs'
import '../stores/quality.arcs'

@arcId('prepInventory')
recipe PrepareInventoryForShop
  containers: map 'largeStock'
  labeled: create @inMemory
  quality: copy 'quality-req'
  inventory: create 'inventory' @persistent @queryable

  LabelInventory
    containers: reads contianers
    categorized: writes labeled

  ProduceInventory
    minimum: reads quality
    categorized: reads labeled
    tea: writes inventory




