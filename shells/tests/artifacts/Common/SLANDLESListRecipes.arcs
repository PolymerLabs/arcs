import 'SLANDLESList.arcs'

//----------------------------------
// Recipe: Generic List (Selectable)
//----------------------------------

recipe SelectableUseListRecipe
  items: use #items
  selected: create #selected
  SelectableList
    items: items
    selected: selected
  ItemMultiplexer
    list: items

recipe SelectableCopyListRecipe
  items: copy #items
  selected: create #selected
  SelectableList
    items: items
    selected: selected
  ItemMultiplexer
    list: items

//----------------------------------------
// Recipe: Generic Tiled List (Selectable)
//----------------------------------------

recipe SelectableCopyTilesRecipe
  items: copy #tiles
  selected: create #selected
  SelectableTileList
    items: items
    selected: selected
  TileMultiplexer
    list: items
  description `show ${SelectableTileList.items}`

recipe SelectableUseTilesRecipe
  items: use #tiles
  selected: create #selected
  SelectableTileList
    items: items
    selected: selected
  TileMultiplexer
    list: items
  description `show ${SelectableTileList.items}`
