import './Common/List.manifest'
import './Products/test/ProductFilter.manifest'
import './Products/test/ProductIsBook.manifest'

import './Products/Product.schema'
particle ShowProduct in './Products/source/ShowProduct.js'
  product: reads Product
  item: consumes Slot

// Filter books and display them.
recipe FilterAndDisplayBooks
  mylist: map 'mylist'
  books: create *
  rootSlot: slot 'rootslotid-root'
  ProductFilter
    products: reads mylist
    hostedParticle: ProductIsBook
    results: writes books
  List
    items: books
    root: consumes rootSlot
      item: provides itemSlot
  ItemMultiplexer
    list: books
    hostedParticle: hosts ShowProduct
    item: consumes itemSlot

// Filter books
recipe FilterBooks
  mylist: map 'mylist'
  books: create *
  ProductFilter
    products: reads mylist
    hostedParticle: ProductIsBook
    results: writes books

resource ProductList
  start
  [
    {"name": "apple"},
    {"name": "Harry Potter", "category": "book"}
  ]

store Store0 of [Product] 'mylist' in ProductList
