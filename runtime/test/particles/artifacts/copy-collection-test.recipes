import '../../../../shell/artifacts/Common/CopyCollection.manifest'
import '../../../../shell/artifacts/Things/Thing.schema'

recipe
  map 'bigthings' as bigthings
  map 'smallthings' as smallthings
  create as things
  CopyCollection
    input <- bigthings
    output -> things
  CopyCollection
    input <- smallthings
    output -> things
  description `copy all things!`


resource BigThings
  start
  [
    {"name": "house"},
    {"name": "car"}
  ]
store Store0 of [Thing] 'bigthings' in BigThings

resource SmallThings
  start
  [
    {"name": "pen"},
    {"name": "spoon"},
    {"name": "ball"}
  ]
store Store1 of [Thing] 'smallthings' in SmallThings
