import '../../../../artifacts/Common/ShowCollection.manifest'
import '../../../../artifacts/Common/Multiplexer.manifest'
import '../../../../artifacts/Products/test/ProductFilter.manifest'
import '../../../../artifacts/Products/test/ProductIsBook.manifest'
import '../../../../artifacts/Products/test/ShowProduct.manifest'

// Filter books and display them.
recipe
  ShowCollection.collection <- ProductFilter.results
  Multiplexer.list -> ShowCollection.collection
  map 'mylist' as mylist
  create as books
  ShowCollection
    consume root
      provide item as itemSlot
  Multiplexer
    hostedParticle = ShowProduct
    consume annotation as itemSlot
  ProductFilter
    products <- mylist
    hostedParticle = ProductIsBook
    results -> books

// Filter books
recipe
  map 'mylist' as mylist
  create as books
  ProductFilter
    products <- mylist
    hostedParticle = ProductIsBook
    results -> books

resource ProductList
  start
  [
    {"name": "apple"},
    {"name": "Harry Potter", "category": "book"}
  ]

store Store0 of [Product] 'mylist' in ProductList
