schema Data
  Number num
  Text txt
  URL lnk
  Boolean flg

resource DataResource
  start
  [
    {"num": 73, "txt": "abc", "lnk": "http://xyz", "flg": true}
  ]
store DataStore of Data in DataResource


schema Info
  Text str
  Number val

resource InfoResource
  start
  [
    {"str": "xx", "val": -5.8},
    {"val": 107},
    {"str": "yy"}
  ]
store InfoStore of [Info] in InfoResource


particle TestParticle in 'output.wasm'
  consume root
  in Data data
  out Data res
  inout [Info] info

recipe
  use DataStore as h1
  create as h2
  use InfoStore as h3
  TestParticle
    data <- h1
    res -> h2
    info = h3
