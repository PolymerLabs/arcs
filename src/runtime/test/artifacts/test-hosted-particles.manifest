schema Foo
  Text value

particle UpdatingParticle in 'updating-particle.js'
  out Foo innerFoo

interface TestInterface
  out Foo *

particle MonitoringParticle in 'monitoring-particle.js'
  host TestInterface hostedParticle
  out Foo foo

recipe
  use as h0
  MonitoringParticle
    foo = h0
    hostedParticle = UpdatingParticle
