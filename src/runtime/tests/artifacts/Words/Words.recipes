import 'GamePane.manifest'
import 'ShowSingleStats.manifest'

recipe
  person: use #user
  board: create #board
  move: create #move
  stats: create #stats
  shellTheme: use #shelltheme
  // TODO(wkorman): We only need one post but currently we need a set to produce
  // the right boxing aggregation.
  posts: create #posts
  post: create
  GamePane
    move: move
    board: board
    stats: stats
    posts: posts
    post: post
    person: reads person
    renderParticle: ShowSingleStats
    shellTheme: reads shellTheme
