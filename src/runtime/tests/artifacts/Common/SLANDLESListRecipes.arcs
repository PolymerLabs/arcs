import 'SLANDLESList.arcs'

//----------------------------------
// Recipe: Generic List (Selectable)
//----------------------------------

recipe SelectableUseListRecipe
  use #items as items
  create #selected as selected
  SelectableList
    items: any items
    selected: any selected
  ItemMultiplexer
    list: any items

recipe SelectableCopyListRecipe
  copy #items as items
  create #selected as selected
  SelectableList
    items: any items
    selected: any selected
  ItemMultiplexer
    list: any items

//----------------------------------------
// Recipe: Generic Tiled List (Selectable)
//----------------------------------------

recipe SelectableCopyTilesRecipe
  copy #tiles as items
  create #selected as selected
  SelectableTileList
    items: any items
    selected: any selected
  TileMultiplexer
    list: any items
  description `show ${SelectableTileList.items}`

recipe SelectableUseTilesRecipe
  use #tiles as items
  create #selected as selected
  SelectableTileList
    items: any items
    selected: any selected
  TileMultiplexer
    list: any items
  description `show ${SelectableTileList.items}`
