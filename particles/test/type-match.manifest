schema Product
  normative
    Text name

schema Lego extends Product
  normative
    Text setID

particle WritesLego
  WritesLego(out [Lego] lego)

particle ReadsProduct
  ReadsProduct(in [Product] product)

recipe MatchBasic
  create as v0
  WritesLego
    lego -> v0
  ReadsProduct
    product <- v0

recipe MatchExisting
  use 'test:1' as v0
  WritesLego
    lego -> v0
  ReadsProduct
    product <- v0
