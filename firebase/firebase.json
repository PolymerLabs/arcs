{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/places", "function": "places" },
      { "source": "/place-photos", "function": "placePhotos" },
      { "source": "/place-details", "function": "placeDetails" }
    ]
  }
}
